<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mask_tags_8"
    tools:context="com.cniao5.app36kr_cnk.ui.Login">

    <RelativeLayout
        android:id="@+id/look_fabu_task_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_sucess_view"
        android:layout_marginTop="-1dp"
        android:background="#66ccff">

        <Button
            android:id="@+id/look_fabu_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="252dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="470dp"
            android:background="@color/mask_tags_8"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/look_fabu_task_ti"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_edit_account"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:background="@color/mask_tags_8"
            android:drawableLeft="@drawable/icon_wodeguanzhu"
            android:ems="10"
            android:hint="显示任务标题"
            android:inputType="textShortMessage"
            android:textSize="23dp"
            android:focusable="false"
            android:gravity="start"
            android:textColor="@color/color_white" />

        <EditText
            android:id="@+id/look_fabu_task_pe"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_edit_account"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:focusable="false"
            android:background="@color/mask_tags_8"
            android:drawableLeft="@drawable/icon_wodeguanzhu"
            android:ems="10"
            android:hint="显示接受人名称"
            android:inputType="textShortMessage"
            android:textSize="23dp"
            android:gravity="start"
            android:textColor="@color/color_white" />


        <EditText
            android:id="@+id/look_fabu_task_phone"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_edit_account"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:background="@color/mask_tags_8"
            android:drawableLeft="@drawable/icon_wodeguanzhu"
            android:ems="10"
            android:hint="显示接受人联系方式"
            android:focusable="false"
            android:inputType="textShortMessage"
            android:textSize="23dp"
            android:gravity="start"
            android:textColor="@color/color_white" />
        <EditText
            android:id="@+id/look_fabu_task_con"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="18dp"
            android:background="@color/mask_tags_8"
            android:gravity="start"
            android:focusable="false"
            android:hint="显示任务正文"
            android:inputType="textMultiLine"
            android:textColor="@color/color_white"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/look_fabu_topay"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="380dp"
            android:background="@color/mask_tags_8"
            android:focusable="false"
            android:textSize="23dp"
            android:drawableLeft="@drawable/icon_shoucang"
            android:hint="显示奖金"
            android:inputType="number"
            android:gravity="start"
            android:textColor="@color/color_white" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/look_fabu_sucess_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15.0px"
        android:layout_marginRight="15.0px"
        android:layout_marginTop="62.0px"
        android:background="#ff3f3f3f"
        android:paddingBottom="10.0px"
        android:paddingTop="21.0px"
        android:visibility="gone" >

        <TextView
            android:id="@+id/login_success_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff3f3f3f"
            android:textSize="20.0dip" />
    </RelativeLayout>

</RelativeLayout>